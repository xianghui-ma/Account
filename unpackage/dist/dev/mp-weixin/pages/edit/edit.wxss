.edit {
  width: 100vw;
  height: 100vh;
}
.edit .accountName {
  padding: 30rpx;
}
.edit .accountName input {
  border: 2rpx solid #aaa;
  border-radius: 20rpx;
  padding: 20rpx;
}
.edit .cover .text {
  padding: 0rpx 30rpx 30rpx 30rpx;
  font-size: 36rpx;
}
.edit .cover .coverList {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: flex-start;
  padding: 0 30rpx 30rpx 30rpx;
  height: 680rpx;
  overflow: scroll;
}
.edit .cover .coverList .innerCover {
  width: 30%;
  height: 45%;
  border-radius: 20rpx;
  background-repeat: no-repeat;
  background-size: cover;
  position: relative;
  margin-bottom: 30rpx;
}
.edit .cover .coverList .innerCover icon {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
}
.edit .cover .coverList .addCover {
  border: 1rpx dashed #aaa;
  color: #aaa;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.edit .button {
  padding: 0rpx 10vw;
}
.edit .button button {
  border-radius: 60rpx;
  height: 90rpx;
  line-height: 90rpx;
  margin-bottom: 35rpx;
  font-size: 36rpx;
}

