.payments {
  width: 100vw;
  height: 100vh;
}
.payments .mes {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 80rpx 0rpx 30rpx 0rpx;
}
.payments .mes text, .payments .mes picker {
  padding: 10rpx 20rpx;
  border-radius: 10%;
  background-color: #eee;
  color: #aaa;
}
.payments .mes .activeExpend {
  color: #fff;
  background-color: #74d573;
}
.payments .mes .activeIncome {
  color: #fff;
  background-color: #fc685b;
}
.payments .inputNum {
  padding: 20rpx 40rpx;
}
.payments .inputNum input {
  border: 2rpx solid #aaa;
  border-radius: 10rpx;
  padding: 20rpx;
}
.payments .note {
  padding: 20rpx 40rpx;
}
.payments .note textarea {
  border: 2rpx solid #aaa;
  border-radius: 10rpx;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.payments button {
  width: 50%;
  margin-top: 100rpx;
}

