<view class="payments"><view data-event-opts="{{[['tap',[['getType',['$event']]]]]}}" class="mes" bindtap="__e"><text class="{{[expend&&'activeExpend']}}" id="expend">支出</text><text class="{{[income&&'activeIncome']}}" id="income">收入</text><text id="blog">收支记录</text></view><view class="name"><input type="text" placeholder="收支名" data-event-opts="{{[['input',[['__set_model',['','paymentName','$event',[]]]]]]}}" value="{{paymentName}}" bindinput="__e"/></view><view class="inputNum"><input type="text" placeholder="0.0元" data-event-opts="{{[['input',[['__set_model',['','money','$event',[]]]]]]}}" value="{{money}}" bindinput="__e"/></view><view class="note"><textarea placeholder="备注..." data-event-opts="{{[['input',[['__set_model',['','note','$event',[]]]]]]}}" value="{{note}}" bindinput="__e"></textarea></view><button type="primary" data-event-opts="{{[['tap',[['storePayments',['$event']]]]]}}" bindtap="__e">保存</button></view>