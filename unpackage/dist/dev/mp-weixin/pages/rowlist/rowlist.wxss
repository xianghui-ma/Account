.rowlist {
  width: 100vw;
  height: 100vh;
  background-color: #3a3a3a;
  color: #fff;
  position: relative;
  overflow: hidden;
}
.rowlist .toggleIcon {
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  left: 20rpx;
  top: 20rpx;
  background-image: url(data:image/png;base64,);
  background-size: cover;
}
.rowlist .accountList {
  margin-top: 90rpx;
  height: 85vh;
}
.rowlist .accountList .createAccount {
  border-radius: 2%;
  border: 2rpx dashed #fff;
  box-sizing: border-box;
}
.rowlist .accountList .createAccount .content {
  height: 100%;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.rowlist .accountList .createAccount .content .slogan {
  color: rgba(255, 255, 255, 0.5);
}
.rowlist .accountList .createAccount .content .addMark {
  font-size: 120rpx;
}
.rowlist .accountList .createAccount .content .explain {
  font-size: larger;
}
.rowlist .accountList .listItem {
  border-left: 20rpx solid transparent;
}
.rowlist .accountList .listItem .accountContent {
  border-radius: 2%;
  width: 100%;
  height: 100%;
  overflow: hidden;
  background-color: #fff;
}
.rowlist .accountList .listItem .accountContent .accountImg {
  height: 70%;
}
.rowlist .accountList .listItem .accountContent .accountTitle {
  padding: 20rpx;
  font-weight: bold;
  color: #777;
}
.rowlist .accountList .listItem .accountContent .accountDate {
  padding: 20rpx;
  color: #777;
}
.rowlist .accountList .listItem .accountContent .editAccount {
  padding: 20rpx;
  display: flex;
  justify-content: flex-end;
}
.rowlist .accountList .listItem .accountContent .editAccount .editIcon {
  width: 60rpx;
  height: 60rpx;
  background-image: url(data:image/png;base64,);
  background-size: cover;
}

