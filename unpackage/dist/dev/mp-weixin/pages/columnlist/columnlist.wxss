.columnlist {
  width: 100vw;
  height: 100vh;
  position: relative;
  background-color: #3a3a3a;
  overflow: scroll;
  color: #fff;
}
.columnlist .iconBox {
  z-index: 10;
  position: fixed;
  height: 90rpx;
  box-sizing: border-box;
  left: 0rpx;
  right: 0rpx;
  background-color: #3a3a3a;
}
.columnlist .iconBox .toggleIcon {
  width: 70rpx;
  height: 70rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  display: inline-block;
  background-image: url(data:image/png;base64,);
  background-size: cover;
}
.columnlist .listArea {
  margin-top: 90rpx;
  width: 100vw;
  height: 100%;
  display: flex;
  flex-direction: row;
}
.columnlist .listArea .time {
  width: 35vw;
  height: 100%;
  padding-left: 20rpx;
  font-size: 32rpx;
}
.columnlist .listArea .time .timeItem {
  box-sizing: border-box;
  border-right: 8rpx solid #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 20%;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.columnlist .listArea .time .timeItem::after {
  content: '';
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #fff;
  position: absolute;
  right: -15rpx;
  top: 50%;
}
.columnlist .listArea .account {
  width: 70vw;
  height: 100%;
  padding-right: 20rpx;
}
.columnlist .listArea .account .accountContent {
  height: 20%;
  border-radius: 20rpx;
  background-color: #fff;
  overflow: hidden;
  margin-top: 20rpx;
}
.columnlist .listArea .account .accountContent .accountImg {
  height: 70%;
  width: 100%;
}
.columnlist .listArea .account .accountContent .description {
  box-sizing: border-box;
  padding: 0rpx 20rpx;
  color: #000;
  display: flex;
  justify-content: space-between;
}
.columnlist .listArea .account .accountContent .description .editIcon {
  width: 60rpx;
  height: 60rpx;
  background-image: url(data:image/png;base64,);
  background-size: cover;
}
.columnlist .listArea .account .addAccount {
  height: 20%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  border: 1rpx dashed #fff;
  border-radius: 20rpx;
}
.columnlist .listArea .account .addAccount .addMark {
  font-size: 80rpx;
}
.columnlist .listArea .account .addAccount .explain {
  font-size: 40rpx;
}

