.detail {
  width: 100vw;
  height: 100vh;
  background-repeat: no-repeat;
  background-size: cover;
}
.detail .total {
  text-align: center;
  color: #fff;
  font-weight: 400;
  padding-top: 30rpx;
  margin-bottom: 20%;
}
.detail .listArea {
  margin: 0rpx 5vw;
  background-color: #fff;
  border-radius: 12rpx;
  text-align: center;
  font-size: 36rpx;
  position: relative;
  padding-bottom: 40rpx;
}
.detail .listArea .date {
  padding: 20rpx 0rpx;
  font-weight: 600;
}
.detail .listArea .totalmoney {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 6%;
  padding-bottom: 20rpx;
}
.detail .listArea .totalmoney .income {
  color: #fc685b;
  font-size: 36rpx;
  flex-grow: 1;
  border-right: 2rpx solid #aaa;
}
.detail .listArea .totalmoney .outcome {
  color: #74d573;
  font-size: 36rpx;
  flex-grow: 1;
}
.detail .listArea .list {
  padding: 0rpx 6%;
}
.detail .listArea .list view {
  display: flex;
  justify-content: space-between;
  line-height: 70rpx;
  border-bottom: 1rpx dashed #aaa;
}
.detail .listArea .list .more {
  margin-top: 10rpx;
  font-size: 36rpx;
  color: #fff;
  justify-content: center;
  background-color: #EE6C4D;
}
.detail .listArea .addIcon {
  position: absolute;
  box-shadow: 0rpx 0rpx 80rpx 10rpx #fc685b inset;
  left: 45%;
  bottom: -50rpx;
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-repeat: no-repeat;
  background-size: cover;
  background-image: url(data:image/png;base64,);
}

